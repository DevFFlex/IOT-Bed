<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/bg"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:visibility="visible"
        android:id="@+id/main_header"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:text="Config"
        android:textAlignment="center"
        android:fontFamily="@font/oswald_bold"
        android:textColor="#13DFCE"/>

    <LinearLayout
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="30sp"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Board Status :"
            android:fontFamily="@font/oswald_bold"
            android:textColor="#B5FF06"/>

        <TextView
            android:layout_marginHorizontal="30sp"
            android:id="@+id/main_board_status"
            android:background="@drawable/status_circle_red"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:fontFamily="@font/oswald_bold"
            android:textColor="#FFFF"/>

        <TextView
            android:id="@+id/main_tv_wcooldown"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:fontFamily="@font/oswald_bold"
            android:textColor="#EDEDED"/>


    </LinearLayout>

    <Button
        android:layout_marginVertical="20dp"
        android:id="@+id/main_btn_restartapp"
        android:background="@drawable/bg_btn_ms11"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:text="Reconnect"
        android:textAlignment="center"
        android:layout_width="150sp"
        android:layout_height="40sp"
        android:fontFamily="@font/oswald_bold"
        android:textColor="#FFFF"/>

    <LinearLayout
        android:background="@drawable/bg_layout1"
        android:layout_margin="20sp"
        android:paddingVertical="20sp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:paddingHorizontal="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_columnWeight="1"
                android:textSize="30sp"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:text="WIFI SSID :"
                android:fontFamily="@font/oswald_bold"
                android:textColor="@color/fg_input_show"/>

            <TextView
                android:id="@+id/main_tv_wssid"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NULL"
                android:fontFamily="@font/oswald_bold"
                android:textColor="#FFFF"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:paddingHorizontal="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:textSize="30sp"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:text="WIFI PASSWORD :"
                android:fontFamily="@font/oswald_bold"
                android:textColor="@color/fg_input_show"/>

            <TextView
                android:id="@+id/main_tv_wpass"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NULL"
                android:fontFamily="@font/oswald_bold"
                android:textColor="#FFFF"/>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100sp">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_load"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20sp"
                android:text="Load"
                android:background="@drawable/bg_btn_ms11"
                android:textSize="25sp"/>

            <Button
                android:layout_marginLeft="20sp"
                android:id="@+id/btn_config"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20sp"
                android:text="Config"
                android:background="@drawable/bg_btn_ms11"
                android:textSize="25sp"/>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100sp">

        <Button
            android:id="@+id/btn_connect"
            android:paddingHorizontal="30sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restart Board"
            android:background="@drawable/bg_btn_ms11"
            android:textSize="25sp"/>

    </FrameLayout>



</LinearLayout>